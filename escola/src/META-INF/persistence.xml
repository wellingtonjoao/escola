<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Controledb" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.controle.util.modelo.Falta</class>
    <class>br.com.controle.util.modelo.Nota</class>
    <class>br.com.controle.util.modelo.Turma</class>
    <class>br.com.controle.util.modelo.Aluno</class>
    <class>br.com.controle.util.modelo.Professor</class>
    <class>br.com.controle.util.modelo.Horario</class>
    <class>br.com.controle.util.modelo.Disciplina</class>
    <class>br.com.controle.util.modelo.Usuario</class>
    <class>br.com.controle.util.modelo.AlunoAvalicao</class>
    <class>br.com.controle.util.modelo.Avaliacao</class>
    <class>br.com.controle.util.modelo.TipoAvaliacao</class>
    <class>br.com.controle.util.modelo.AlunoTurma</class>
    <class>br.com.controle.util.modelo.Bimestre</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/controle"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="123456"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
